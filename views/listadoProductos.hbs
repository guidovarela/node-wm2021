
<div class="container-fluid mt-5">
    <div class="container">

        <div class="row">
            <div class="col-8">
                <h1>{{title}}</h1>
            </div>
            <div class="col-4 text-end">
                <a href="/nuevo-producto" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Nuevo Producto</a>
                <a href="/edit-prod" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Editar Producto</a>
            </div>
        </div>
        <hr>

        <div class="alert alert-success">
            <p>El ultimo producto es: {{lastProd.nombre}} </p>
        </div>

        <div class="row">
        {{#each productos}}
            <div class="col-md-3">
                <a href="/productos/{{id}}">
                <div class="card mb-4 card-prod shadow-sm bg-dark">
                        {{#if imagen}}
                            <img  src="/images/{{imagen}}" class="card-img" alt="{{nombre}}">
                        {{else}}
                            <img  src="/images/default.png" class="card-img" alt="{{nombre}}">
                        {{/if}}
                    <div class="card-body">
                        <p class="h4 text-white">{{nombre}}</p>
                    </div>
                </div>
                </a>
            </div>
        {{/each}}
    </div>



    </div>
</div>